---
import Base from "../layouts/Base.astro";
import { profile, selectedWork, speaking } from "../data/site";

const writingLinks = [
  { label: "Behind the scenes of RRGraph template system ↗", href: "/blog/behind-the-scenes" },
  { label: "How I built cleaner presentation workflows ↗", href: "/blog/cleaner-workflows" },
];
---

<Base title={`${profile.name} - Home`} active="home">
  <section class="section work-section">
    <div class="section-title">Selected Work</div>
    <div class="grid work-grid">
      {selectedWork.map((work) => (
        <article class="card work-card">
          <div class="placeholder" aria-hidden="true"></div>
          <div class="work-meta">
            <span>{work.org}</span>
            <span>{work.year}</span>
          </div>
          <h3><a class="work-title-link" href={`/work/${work.slug}`}>{work.title}</a></h3>
          <p>{work.description}</p>
          <div class="work-tags">
            {work.tags?.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="section info-section">
    <div class="info-group">
      <div class="section-title">Writing</div>
      <div class="info-links">
        {writingLinks.map((item) => (
          <a href={item.href}>{item.label}</a>
        ))}
      </div>
    </div>

    <div class="info-group">
      <div class="section-title">Speak</div>
      <div class="info-links">
        {speaking.map((item) => (
          <a href="/cv">{item.title} ↗</a>
        ))}
      </div>
    </div>
  </section>
</Base>

<style>
  .work-section {
    padding-top: var(--space-5);
  }

  .work-grid {
    gap: var(--space-5);
  }

  .work-card h3 {
    margin: 0 0 8px;
    font-weight: 600;
    font-size: 16px;
  }

  .work-title-link {
    text-decoration: none;
  }

  .work-title-link:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .work-card p {
    margin: 0 0 12px;
    color: var(--muted);
  }

  .work-meta {
    display: flex;
    gap: 12px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-top: 24px;
    margin-bottom: 8px;
  }

  .work-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 11px;
    color: var(--muted);
    border: 1px solid var(--surface);
    border-radius: 999px;
    padding: 4px 10px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .info-section {
    padding-top: 48px;
  }

  .info-group {
    display: grid;
    grid-template-columns: 1fr 1.4fr;
    gap: 32px;
    margin-bottom: 48px;
  }

  .info-links {
    display: grid;
    gap: 16px;
  }

  .info-links a {
    color: var(--muted);
    font-size: 14px;
    line-height: 1.5;
  }

  .info-links a:hover {
    color: var(--ink);
  }

  @media (max-width: 700px) {
    .info-group {
      grid-template-columns: 1fr;
      gap: 12px;
      margin-bottom: 32px;
    }
  }
</style>
