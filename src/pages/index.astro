<style>
  :global(*) {
    box-sizing: border-box;
  }

  :global(body) {
    margin: 0;
    font-family: "Manrope", system-ui, sans-serif;
    color: var(--ink);
    background: var(--bg);
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  :global(:root) {
    --bg: #f6f4f0;
    --ink: #151515;
    --muted: #6e6e6e;
    --accent: #151515;
    --line: rgba(21, 21, 21, 0.08);
    --card: #ffffff;
  }

  .page {
    min-height: 100vh;
    max-width: 980px;
    margin: 0 auto;
    padding: 56px clamp(20px, 4vw, 64px) 72px;
    position: relative;
    overflow: hidden;
  }

  .page::before {
    content: "";
    position: absolute;
    inset: -30% auto auto -20%;
    width: 50vw;
    height: 50vw;
    background: radial-gradient(circle at center, rgba(0, 0, 0, 0.05), transparent 70%);
    filter: blur(20px);
    z-index: 0;
  }

  .page::after {
    content: "";
    position: absolute;
    inset: auto -20% -30% auto;
    width: 40vw;
    height: 40vw;
    background: radial-gradient(circle at center, rgba(0, 0, 0, 0.04), transparent 70%);
    filter: blur(24px);
    z-index: 0;
  }

  .hero,
  main,
  .footer {
    position: relative;
    z-index: 1;
  }

  .hero {
    text-align: center;
    position: sticky;
    top: 0;
    padding: 28px 0 20px;
    background: var(--bg);
    border-bottom: 1px solid var(--line);
    z-index: 2;
  }

  .avatar {
    width: 64px;
    height: 64px;
    border-radius: 18px;
    background: #f0f0f0;
    margin: 0 auto 18px;
    display: grid;
    place-items: center;
    font-family: "Space Grotesk", sans-serif;
    font-weight: 600;
    color: var(--ink);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  }

  .kicker {
    font-size: 12px;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: 12px;
  }

  h1 {
    font-family: "Space Grotesk", sans-serif;
    font-size: clamp(30px, 5vw, 44px);
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .summary {
    font-size: 16px;
    max-width: 58ch;
    margin: 0 auto;
    color: var(--muted);
  }

  .social {
    margin: 20px 0 28px;
    display: flex;
    justify-content: center;
    gap: 14px;
    flex-wrap: wrap;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .tabs {
    display: inline-flex;
    gap: 10px;
    padding: 6px;
    background: #efefef;
    border-radius: 999px;
  }

  .tab {
    padding: 8px 16px;
    font-size: 12px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
    border-radius: 999px;
  }

  .tab.active {
    background: var(--ink);
    color: #fff;
  }

  .section {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 24px;
    padding: 56px 0;
    border-bottom: 1px solid var(--line);
  }

  .section-title {
    font-family: "Space Grotesk", sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 12px;
    color: var(--muted);
  }

  .section-body p {
    max-width: 70ch;
    color: var(--muted);
  }

  .stack {
    display: grid;
    gap: 18px;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 18px;
  }

  .card {
    border: 1px solid var(--line);
    border-radius: 18px;
    padding: 20px;
    background: var(--card);
    box-shadow: 0 8px 22px rgba(0, 0, 0, 0.04);
  }

  .card h3 {
    margin-top: 0;
    margin-bottom: 6px;
    font-family: "Space Grotesk", sans-serif;
  }

  .card header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 16px;
  }

  .meta-line {
    color: var(--muted);
    font-size: 14px;
  }

  .pill {
    border: 1px solid var(--line);
    border-radius: 999px;
    padding: 6px 12px;
    font-size: 11px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
  }

  .card ul {
    margin: 16px 0 0;
    padding-left: 18px;
    color: var(--muted);
  }

  .card li {
    margin-bottom: 8px;
  }

  .plain-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 10px;
    color: var(--muted);
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 18px;
  }

  .card.wide {
    min-height: 220px;
    display: grid;
    gap: 10px;
  }

  .card-head {
    display: flex;
    justify-content: flex-start;
  }

  .badge {
    border: 1px solid var(--line);
    border-radius: 999px;
    padding: 6px 12px;
    font-size: 11px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .cta {
    border: 1px solid var(--ink);
    border-radius: 999px;
    padding: 10px 16px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    width: fit-content;
  }

  .footer {
    display: grid;
    gap: 16px;
    padding-top: 56px;
  }

  .footer h2 {
    font-family: "Space Grotesk", sans-serif;
    margin: 0 0 8px;
  }

  .footer-links {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .footnote {
    font-size: 12px;
    color: var(--muted);
  }

  .muted {
    color: var(--muted);
  }

  @media (max-width: 900px) {
    .section {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .tabs {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
