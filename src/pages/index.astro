---
import Base from "../layouts/Base.astro";
import { profile, selectedWork } from "../data/site";
---

<Base title={`${profile.name} - Home`}>
  <section class="hero">
    <p class="eyebrow">{profile.pronouns} · {profile.location}</p>
    <h1>Hey, I'm {profile.name}.</h1>
    <p class="lead">{profile.summary}</p>
    <nav class="home-nav">
      <a href="/about">About</a>
      <a href="/cv">CV</a>
      <a href="/archive">Archive</a>
    </nav>
  </section>

  <section class="section">
    <div class="section-title">Selected Work</div>
    <div class="grid grid-2">
      {selectedWork.map((work) => (
        <article class="card work-card">
          <div class="placeholder" aria-hidden="true"></div>
          <div class="work-meta">
            <span>{work.org}</span>
            <span>{work.year}</span>
          </div>
          <h3>{work.title}</h3>
          <p>{work.description}</p>
          <a class="work-link" href={`/work/${work.slug}`}>Case study →</a>
        </article>
      ))}
    </div>
  </section>
</Base>

<style>
  .hero {
    padding: 36px 0 24px;
  }

  h1 {
    font-size: clamp(28px, 4vw, 44px);
    margin: 8px 0 12px;
  }

  .lead {
    max-width: 60ch;
    margin: 0;
    color: var(--muted);
  }

  .home-nav {
    display: flex;
    gap: 16px;
    margin-top: 18px;
    font-size: 12px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .work-card h3 {
    margin: 10px 0 6px;
    font-size: 18px;
  }

  .work-card p {
    margin: 0 0 12px;
    color: var(--muted);
  }

  .work-meta {
    display: flex;
    gap: 12px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-top: 12px;
  }

  .work-link {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }
</style>
