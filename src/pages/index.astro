---
import Base from "../layouts/Base.astro";
import { profile, selectedWork, speaking } from "../data/site";

const writingLinks = [
  { label: "Behind the scenes of RRGraph template system ↗", href: "/blog/behind-the-scenes" },
  { label: "How I built cleaner presentation workflows ↗", href: "/blog/cleaner-workflows" },
];
---

<Base title={`${profile.name} - Home`} active="home">
  <section class="section work-section full-bleed reveal">
    <div class="section-title">Selected Work</div>
    <div class="grid work-grid">
      {selectedWork.map((work) => (
        <article class="card work-card reveal">
          <div class="work-head">
            <h3><a class="work-title-link" href={`/work/${work.slug}`}>{work.title}</a></h3>
            <div class="work-meta">
              <span>{work.org}</span>
              <span>{work.year}</span>
            </div>
          </div>
          <div class="work-mosaic" aria-hidden="true">
            <div class="placeholder tile tile-wide"></div>
            <div class="placeholder tile tile-tall"></div>
            <div class="placeholder tile tile-tall"></div>
            <div class="placeholder tile tile-wide"></div>
          </div>
          <div class="work-tags">
            {work.tags?.map((tag) => (
              <span class="tag">
                {tag}
              </span>
            ))}
          </div>
          <p>{work.description}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="section info-section full-bleed reveal">
    <div class="info-group reveal">
      <div class="section-title">Writing</div>
      <div class="info-links">
        {writingLinks.map((item) => (
          <a href={item.href}>{item.label}</a>
        ))}
      </div>
    </div>

    <div class="info-group reveal">
      <div class="section-title">Speak</div>
      <div class="info-links">
        {speaking.map((item) => (
          <a href="/cv">{item.title} ↗</a>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    const observer = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            observer.unobserve(entry.target);
          }
        }
      },
      { threshold: 0.14 }
    );
    document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));
  </script>
</Base>

<style>
  .full-bleed {
    --tx: -50%;
    width: min(1380px, calc(100vw - 64px));
    margin-left: 50%;
    transform: translateX(var(--tx));
  }

  .work-section {
    padding-top: var(--space-5);
  }

  .work-grid {
    gap: var(--space-5);
  }

  .work-card h3 {
    margin: 0;
    font-weight: 600;
    font-size: 16px;
  }

  .work-head {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    align-items: baseline;
    margin-bottom: 20px;
  }

  .work-title-link {
    text-decoration: none;
  }

  .work-title-link:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .work-card p {
    margin: 12px 0 0;
    color: var(--muted);
  }

  .work-meta {
    display: flex;
    gap: 12px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    white-space: nowrap;
  }

  .work-mosaic {
    display: grid;
    grid-template-columns: 1.7fr 1fr;
    grid-template-areas:
      "a b"
      "c d";
    gap: 16px;
    margin-bottom: 20px;
  }

  .tile {
    height: 220px;
  }

  .work-mosaic .tile:nth-child(1) {
    grid-area: a;
  }

  .work-mosaic .tile:nth-child(2) {
    grid-area: b;
  }

  .work-mosaic .tile:nth-child(3) {
    grid-area: c;
  }

  .work-mosaic .tile:nth-child(4) {
    grid-area: d;
  }

  .work-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 11px;
    color: var(--muted);
    border: 1px solid var(--surface);
    border-radius: 999px;
    padding: 4px 10px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .info-section {
    padding-top: 48px;
  }

  .info-group {
    display: grid;
    grid-template-columns: 1fr 1.4fr;
    gap: 32px;
    margin-bottom: 48px;
  }

  .info-links {
    display: grid;
    gap: 16px;
  }

  .info-links a {
    color: var(--muted);
    font-size: 14px;
    line-height: 1.5;
  }

  .info-links a:hover {
    color: var(--ink);
  }

  .reveal {
    opacity: 0;
    transform: translateX(var(--tx, 0)) translateY(18px);
    transition: opacity 0.6s ease, transform 0.6s ease;
    will-change: transform, opacity;
  }

  .reveal.in-view {
    opacity: 1;
    transform: translateX(var(--tx, 0)) translateY(0);
  }

  @media (max-width: 700px) {
    .full-bleed {
      --tx: -50%;
      width: calc(100vw - 48px);
    }

    .work-head {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }

    .work-mosaic {
      grid-template-columns: 1fr;
      grid-template-areas:
        "a"
        "b"
        "c"
        "d";
    }

    .tile,
    .tile {
      height: 180px;
    }

    .info-group {
      grid-template-columns: 1fr;
      gap: 12px;
      margin-bottom: 32px;
    }
  }
</style>
