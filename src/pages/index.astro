---
import Base from "../layouts/Base.astro";
import { profile, selectedWork, speaking } from "../data/site";

const writingLinks = [
  { label: "Behind the scenes of RRGraph template system ↗", href: "/blog/behind-the-scenes" },
  { label: "How I built cleaner presentation workflows ↗", href: "/blog/cleaner-workflows" },
];
---

<Base
  title="Galang Saputra | Visual Designer"
  active="home"
  showProfilePhoto={false}
  stickyHeader={true}
  showFooterContact={true}
>
  <section class="section work-section reveal">
    <div class="section-title">Selected Work</div>
    <div class="grid work-grid">
      {selectedWork.map((work) => (
        <article class="card work-card reveal">
          <div class="work-head">
            <h3><a class="content-link" href={`/work/${work.slug}`}>{work.title}</a></h3>
            <div class="work-meta">
              <span>{work.org}</span>
              <span>{work.year}</span>
            </div>
          </div>
          <div class="work-mosaic" aria-hidden="true">
            <div class="placeholder tile tile-wide"></div>
            <div class="placeholder tile tile-tall"></div>
            <div class="placeholder tile tile-tall"></div>
            <div class="placeholder tile tile-wide"></div>
          </div>
          <div class="work-tags">
            {work.tags?.map((tag) => (
              <span class="tag">
                {tag}
              </span>
            ))}
          </div>
          <p>{work.description}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="section info-section reveal">
    <div class="info-group reveal">
      <div class="section-title">Writing</div>
      <div class="info-links">
        {writingLinks.map((item) => (
          <a class="content-link" href={item.href}>{item.label}</a>
        ))}
      </div>
    </div>

    <div class="info-group reveal">
      <div class="section-title">Speak</div>
      <div class="info-links">
        {speaking.map((item) => (
          <a class="content-link" href="/about#work-experience">{item.title} ↗</a>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    const observer = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            observer.unobserve(entry.target);
          }
        }
      },
      { threshold: 0.14 }
    );
    document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));
  </script>
</Base>

<style>
  .work-grid {
    gap: var(--space-6);
  }

  .work-card h3 {
    margin: 0;
    font-weight: 400;
  }

  .work-head {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    align-items: baseline;
    margin-bottom: 16px;
  }

  .work-card p {
    margin: 12px 0 0;
    color: var(--muted);
    font-size: 1rem;
  }

  .work-meta {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    display: flex;
    gap: 12px;
    font-size: 1rem;
    color: var(--muted);
    white-space: nowrap;
  }

  .work-mosaic {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 16px;
    margin-bottom: 16px;
  }

  .tile {
    aspect-ratio: 16 / 10;
    height: auto;
  }

  .work-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    color: var(--muted);
    border: 1px solid var(--surface);
    border-radius: 999px;
    min-height: 34px;
    padding: 0 12px;
    display: inline-flex;
    align-items: center;
    font-size: 1rem;
    font-weight: 400;
  }

  .info-section {
    padding-top: 32px;
  }

  .info-group {
    display: grid;
    grid-template-columns: 1fr 1.4fr;
    gap: 32px;
    margin-bottom: 48px;
  }

  .info-links {
    display: grid;
    gap: 16px;
  }

  .info-links a {
    line-height: 1.5;
    font-size: 1rem;
  }

  .reveal {
    opacity: 0;
    transform: translateY(18px);
    transition: opacity 0.6s ease, transform 0.6s ease;
    will-change: transform, opacity;
  }

  .reveal.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 700px) {
    .work-head {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }

    .work-mosaic {
      grid-template-columns: 1fr;
    }

    .tile {
      aspect-ratio: 16 / 10;
    }

    .info-group {
      grid-template-columns: 1fr;
      gap: 12px;
      margin-bottom: 32px;
    }
  }
</style>
