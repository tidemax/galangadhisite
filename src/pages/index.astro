---
import Base from "../layouts/Base.astro";
import { profile, selectedWork } from "../data/site";
---

<Base title={`${profile.name} - Home`} active="home">
  <section class="section work-section">
    <div class="section-title">Selected Work</div>
    <div class="grid work-grid">
      {selectedWork.map((work) => (
        <article class="card work-card">
          <div class="placeholder" aria-hidden="true"></div>
          <div class="work-meta">
            <span>{work.org}</span>
            <span>{work.year}</span>
          </div>
          <h3>{work.title}</h3>
          <p>{work.description}</p>
          <a class="work-link" href={`/work/${work.slug}`}>Case study â†’</a>
        </article>
      ))}
    </div>
  </section>
</Base>

<style>
  .work-section {
    padding-top: var(--space-6);
  }

  .work-grid {
    gap: var(--space-6);
  }

  .work-card h3 {
    margin: 0 0 8px;
    font-weight: 600;
    font-size: 19px;
  }

  .work-card p {
    margin: 0 0 12px;
    font-size: 15px;
    line-height: 1.5;
    color: var(--muted);
  }

  .work-meta {
    display: flex;
    gap: 12px;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-top: 24px;
    margin-bottom: 8px;
  }

  .work-link {
    font-size: 14px;
    font-weight: 500;
  }
</style>
