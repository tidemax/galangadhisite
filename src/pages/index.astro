---
import Base from "../layouts/Base.astro";
import { profile, selectedWork, speaking } from "../data/site";

const writingLinks = [
  { label: "Behind the scenes of RRGraph template system ↗", href: "/blog/behind-the-scenes" },
  { label: "How I built cleaner presentation workflows ↗", href: "/blog/cleaner-workflows" },
];
---

<Base
  title="Galang Saputra | Visual Designer"
  active="home"
  showProfilePhoto={false}
  stickyHeader={true}
  showFooterContact={true}
>
  <section class="section work-section reveal">
    <div class="section-title">Selected Work</div>
    <div class="case-scroll">
      <div class="case-pin" id="case-pin">
        <h3 class="case-pin-title">
          <a class="content-link" id="case-pin-link" href={`/work/${selectedWork[0].slug}`}>{selectedWork[0].title}</a>
        </h3>
        <p class="case-pin-tag" id="case-pin-tag">{selectedWork[0].tags?.join(" · ")}</p>
      </div>

      <div class="grid work-grid">
        {selectedWork.map((work, index) => (
          <article
            class="card work-card reveal"
            data-case-title={work.title}
            data-case-org={work.org}
            data-case-year={work.year}
            data-case-link={`/work/${work.slug}`}
            data-case-tags={work.tags?.join(" · ") ?? ""}
          >
            {index > 0 && (
              <div class="case-divider">
                <h3><a class="content-link" href={`/work/${work.slug}`}>{work.title}</a></h3>
                <p>{work.tags?.join(" · ")}</p>
              </div>
            )}
            <div class="work-mosaic" aria-hidden="true">
              <div class="placeholder tile tile-square"></div>
              <div class="placeholder tile tile-portrait"></div>
              <div class="placeholder tile tile-landscape"></div>
              <div class="placeholder tile tile-square"></div>
              <div class="placeholder tile tile-landscape"></div>
              <div class="placeholder tile tile-square"></div>
              <div class="placeholder tile tile-portrait"></div>
              <div class="placeholder tile tile-landscape"></div>
              <div class="placeholder tile tile-portrait"></div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="section info-section reveal">
    <div class="info-group reveal">
      <div class="section-title">Writing</div>
      <div class="info-links">
        {writingLinks.map((item) => (
          <a class="content-link" href={item.href}>{item.label}</a>
        ))}
      </div>
    </div>

    <div class="info-group reveal">
      <div class="section-title">Speak</div>
      <div class="info-links">
        {speaking.map((item) => (
          <a class="content-link" href="/about#work-experience">{item.title} ↗</a>
        ))}
      </div>
    </div>
  </section>

  <script is:inline>
    const observer = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            entry.target.classList.add("in-view");
            observer.unobserve(entry.target);
          }
        }
      },
      { threshold: 0.14 }
    );
    document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));

    const pin = document.getElementById("case-pin");
    const pinTag = document.getElementById("case-pin-tag");
    const pinLink = document.getElementById("case-pin-link");
    const cards = Array.from(document.querySelectorAll(".work-card"));
    let activeCard = cards[0];

    const setPinnedCase = (card) => {
      if (!pin || !pinTag || !pinLink || !card || activeCard === card) return;
      activeCard = card;
      pinLink.textContent = card.dataset.caseTitle || "";
      pinLink.setAttribute("href", card.dataset.caseLink || "#");
      pinTag.textContent = card.dataset.caseTags || `${card.dataset.caseOrg} · ${card.dataset.caseYear}`;
    };

    let ticking = false;
    const updateActiveCase = () => {
      if (ticking) return;
      ticking = true;
      window.requestAnimationFrame(() => {
        if (!cards.length) {
          ticking = false;
          return;
        }
        const triggerY = window.innerHeight * 0.36;
        let nextActive = cards[0];

        for (const card of cards) {
          const rect = card.getBoundingClientRect();
          if (rect.top <= triggerY) nextActive = card;
        }

        setPinnedCase(nextActive);
        ticking = false;
      });
    };

    if (pin && pinTag && pinLink && cards[0]) {
      pinLink.textContent = cards[0].dataset.caseTitle || "";
      pinLink.setAttribute("href", cards[0].dataset.caseLink || "#");
      pinTag.textContent = cards[0].dataset.caseTags || `${cards[0].dataset.caseOrg} · ${cards[0].dataset.caseYear}`;
    }

    updateActiveCase();
    window.addEventListener("scroll", updateActiveCase, { passive: true });
    window.addEventListener("resize", updateActiveCase);
  </script>
</Base>

<style>
  .case-scroll {
    position: relative;
  }

  .case-pin {
    position: sticky;
    top: 69px;
    z-index: 5;
    margin: 0 0 22px;
    background: #fff;
    padding: 10px 0 14px;
    border-bottom: 1px solid var(--line);
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 24px;
    transition: opacity 0.22s ease;
    pointer-events: none;
  }

  .case-pin-title {
    margin: 0;
    min-width: 0;
    pointer-events: auto;
  }

  .case-pin-title a {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
  }

  .case-pin-tag {
    margin: 0;
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    color: var(--muted);
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .work-grid {
    gap: 28px;
  }

  .case-divider {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto;
    align-items: baseline;
    gap: 16px;
    padding: 2px 0 10px;
    border-bottom: 1px solid var(--line);
    margin-bottom: 14px;
  }

  .case-divider h3,
  .case-divider p {
    margin: 0;
  }

  .case-divider h3 {
    min-width: 0;
  }

  .case-divider h3 a {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .case-divider p {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    white-space: nowrap;
  }

  .work-section {
    padding-top: 22px;
  }

  .work-section .section-title {
    margin-bottom: 24px;
  }

  .work-mosaic {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 16px;
    margin-bottom: 10px;
    align-items: start;
  }

  .work-mosaic .placeholder {
    height: auto !important;
    border-radius: 0;
  }

  .tile {
    width: 100%;
    height: auto;
    align-self: start;
  }

  .work-mosaic .tile-square {
    aspect-ratio: 1 / 1 !important;
    grid-column: span 1 !important;
  }

  .work-mosaic .tile-portrait {
    aspect-ratio: 3 / 4 !important;
    grid-column: span 1 !important;
  }

  .work-mosaic .tile-landscape {
    aspect-ratio: 16 / 10 !important;
    grid-column: span 1 !important;
  }

  .info-section {
    padding-top: 32px;
  }

  .info-group {
    display: grid;
    grid-template-columns: 1fr 1.4fr;
    gap: 32px;
    margin-bottom: 48px;
  }

  .info-links {
    display: grid;
    gap: 16px;
  }

  .info-links a {
    line-height: 1.5;
    font-size: 1rem;
  }

  .reveal {
    opacity: 1;
    transform: none;
  }

  @media (max-width: 700px) {
    .work-section {
      padding-top: 18px;
    }

    .work-section .section-title {
      margin-bottom: 18px;
    }

    .work-grid {
      gap: 20px;
    }

    .case-divider {
      grid-template-columns: minmax(0, 1fr) auto;
      align-items: baseline;
      gap: 4px;
      padding-bottom: 8px;
      margin-bottom: 10px;
    }

    .case-pin {
      display: none;
    }

    .work-mosaic {
      grid-template-columns: 1fr;
    }

    .tile {
      aspect-ratio: 16 / 10;
      grid-column: auto;
    }

    .info-group {
      grid-template-columns: 1fr;
      gap: 12px;
      margin-bottom: 32px;
    }
  }
</style>
