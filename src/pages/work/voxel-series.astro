---
import Base from "../../layouts/Base.astro";
import { profile } from "../../data/site";
---

<Base title={`Voxel Series - ${profile.name}`}>
  <section class="section">
    <p class="eyebrow">Case Study</p>
    <h1>3D Voxel Series</h1>
    <p class="lead">
      Dummy case study for an ongoing voxel exploration using MagicaVoxel and
      playful 3D composition.
    </p>
    <div class="placeholder hero" aria-hidden="true"></div>
  </section>

  <section class="section">
    <div class="section-title">Overview</div>
    <p class="body">
      Replace this with your process notes, iterations, and final renders.
    </p>
  </section>
</Base>

<style>
  .lead {
    max-width: 60ch;
    color: var(--muted);
  }

  .hero {
    margin-top: 24px;
    height: 280px;
  }

  .body {
    color: var(--muted);
    max-width: 70ch;
  }
</style>
