---
import Base from "../../layouts/Base.astro";
import { profile } from "../../data/site";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) =>
  b.data.date.localeCompare(a.data.date)
);
---

<Base title={`${profile.name} - Blog`} active="blog" showProfile={false}>
  <section class="section">
    <div class="section-title">Writing</div>
    <div class="blog-grid">
      {posts.map((post) => (
        <article class="post-card">
          <div class="post-thumb placeholder" aria-hidden="true"></div>
          <p class="meta">{post.data.date}</p>
          <h3><a class="content-link" href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
          <p>{post.data.excerpt}</p>
        </article>
      ))}
    </div>
  </section>
</Base>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 28px 24px;
  }

  .post-card {
    display: grid;
    gap: 10px;
  }

  .post-thumb {
    aspect-ratio: 16 / 10;
    height: auto;
    border-radius: 10px;
  }

  .meta {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    margin: 0;
    font-size: 0.84rem;
    color: #8a8a8a;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  h3 {
    margin: 0;
  }

  p {
    margin: 0;
    color: var(--muted);
    max-width: 52ch;
  }

  @media (max-width: 900px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 22px;
    }
  }
</style>
