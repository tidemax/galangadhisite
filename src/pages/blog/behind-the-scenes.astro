<style>
  .post {
    max-width: 68ch;
  }

  h2 {
    margin: 0 0 8px;
    font-size: inherit;
  }

  p {
    margin: 0 0 12px;
    color: var(--muted);
  }

  .back {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }
