---
import Base from "../layouts/Base.astro";
import { profile, archiveWork } from "../data/site";
---

<Base title={`${profile.name} - Archive`}>
  <section class="section">
    <div class="section-title">Archive Work</div>
    <div class="grid grid-2">
      {archiveWork.map((work) => (
        <article class="card">
          <div class="placeholder" aria-hidden="true"></div>
          <div class="archive-meta">
            <span>{work.type}</span>
            <span>{work.year}</span>
          </div>
          <h3>{work.title}</h3>
        </article>
      ))}
    </div>
  </section>

  <nav class="page-nav">
    <a href="/">Home</a>
    <a href="/about">About</a>
    <a href="/cv">CV</a>
  </nav>
</Base>

<style>
  h3 {
    margin: 12px 0 0;
  }

  .archive-meta {
    display: flex;
    gap: 12px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-top: 12px;
  }

  .page-nav {
    display: flex;
    gap: 16px;
    margin-top: 18px;
    font-size: 12px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
  }
</style>
