---
import Base from "../layouts/Base.astro";
import { profile, archiveWork } from "../data/site";
---

<Base title={`${profile.name} - Archive`} active="archive">
  <section class="section">
    <div class="section-title">Archive Work</div>
    <div class="grid grid-2">
      {archiveWork.map((work) => (
        <article class="card">
          <div class="placeholder" aria-hidden="true"></div>
          <div class="archive-meta">
            <span>{work.type}</span>
            <span>{work.year}</span>
          </div>
          <h3>{work.title}</h3>
        </article>
      ))}
    </div>
  </section>

</Base>

<style>
  h3 {
    margin: 12px 0 0;
  }

  .archive-meta {
    display: flex;
    gap: 12px;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-top: 12px;
  }

</style>
