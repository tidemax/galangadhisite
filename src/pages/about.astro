---
import Base from "../layouts/Base.astro";
import { profile } from "../data/site";
---

<Base title={`${profile.name} - About`}>
  <section class="section">
    <div class="section-title">About</div>
    <div class="content">
      <p>
        {profile.summary}
      </p>
      <p>
        Currently: {profile.current}
      </p>
      <nav class="page-nav">
        <a href="/">Home</a>
        <a href="/cv">CV</a>
        <a href="/archive">Archive</a>
      </nav>
    </div>
  </section>
</Base>

<style>
  .content {
    max-width: 68ch;
    color: var(--muted);
  }

  .content p {
    margin: 0 0 16px;
  }

  .page-nav {
    display: flex;
    gap: 16px;
    margin-top: 18px;
    font-size: 12px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
  }
</style>
