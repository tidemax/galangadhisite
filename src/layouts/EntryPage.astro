---
import Base from "./Base.astro";

const {
  title,
  active = "home",
  backHref = "/",
  backLabel = "Back",
  kicker = "",
  heroTitle = "",
  summary = "",
  meta = [],
} = Astro.props;
---

<Base title={title} active={active} showProfile={false} stickyHeader={false}>
  <section class="entry">
    <aside class="entry-aside">
      <a class="entry-back" href={backHref}>‚Üê {backLabel}</a>
    </aside>

    <article class="entry-body">
      {kicker && <p class="entry-kicker">{kicker}</p>}
      {heroTitle && <h1>{heroTitle}</h1>}
      {summary && <p class="entry-summary">{summary}</p>}

      {meta.length > 0 && (
        <div class="entry-meta-grid">
          {meta.map((item) => (
            <div class="entry-meta-item">
              <p class="entry-meta-label">{item.label}</p>
              <p>{item.value}</p>
            </div>
          ))}
        </div>
      )}

      <div class="entry-content">
        <slot />
      </div>
    </article>
  </section>
</Base>

<style>
  .entry {
    display: grid;
    grid-template-columns: 180px minmax(0, 1fr);
    gap: 44px;
    align-items: start;
    padding-top: 10px;
  }

  .entry-aside {
    position: sticky;
    top: 92px;
    align-self: start;
  }

  .entry-back {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #8a8a8a;
  }

  .entry-back:hover {
    color: var(--ink);
    text-decoration: none;
  }

  .entry-body {
    max-width: 820px;
  }

  .entry-kicker {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #8a8a8a;
    margin: 0 0 8px;
  }

  .entry-summary {
    margin: 14px 0 0;
    max-width: 66ch;
  }

  .entry-meta-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 16px;
    margin: 28px 0 18px;
  }

  .entry-meta-item p {
    margin: 0;
  }

  .entry-meta-label {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #8a8a8a;
    margin-bottom: 6px;
  }

  .entry-content :global(h2),
  .entry-content :global(h3) {
    margin-top: 26px;
    margin-bottom: 8px;
  }

  .entry-content :global(p) {
    margin: 0 0 12px;
    max-width: 68ch;
  }

  @media (max-width: 980px) {
    .entry {
      grid-template-columns: 1fr;
      gap: 18px;
    }

    .entry-aside {
      position: static;
    }

    .entry-meta-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>
