---
import "../styles/global.css";
import { profile } from "../data/site";
const {
  title = profile.name,
  description = profile.summary,
  active = "home",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      try {
        const saved = localStorage.getItem("theme");
        if (saved === "dark" || saved === "light") {
          document.documentElement.dataset.theme = saved;
        }
      } catch {}
    </script>
  </head>
  <body>
    <main>
      <div class="container">
        <section class="profile-block">
          <div class="avatar-wrap">
            <img class="avatar" src="/avatar.svg" alt={`${profile.name} photo`} />
            <button class="theme-toggle" type="button" data-theme-toggle aria-label="Toggle theme">
              <span class="theme-icon" data-theme-icon>☾</span>
            </button>
          </div>
          <p class="eyebrow">{profile.pronouns} · {profile.location}</p>
          <h1>Hey, I'm {profile.name}.</h1>
          <p class="lead">{profile.summary}</p>
          <nav class="text-nav">
            <a class:list={["nav-link", active === "home" && "active"]} href="/">Home</a>
            <a class:list={["nav-link", active === "about" && "active"]} href="/about">About</a>
            <a class:list={["nav-link", active === "cv" && "active"]} href="/cv">CV</a>
            <a class:list={["nav-link", active === "archive" && "active"]} href="/archive">Archive</a>
            <a class:list={["nav-link", active === "blog" && "active"]} href="/blog">Blog</a>
          </nav>
        </section>
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container footer-inner">
        <div class="footer-bottom">
          <p class="footer-copy">© {new Date().getFullYear()} {profile.name}</p>
          <div class="footer-links">
            <a class="social-link" href="mailto:galangadhi47@gmail.com">Email</a>
            <a class="social-link" href="https://x.com/" target="_blank" rel="noreferrer">X</a>
            <a class="social-link" href="https://www.behance.net/galangadhi" target="_blank" rel="noreferrer">Behance</a>
            <a class="social-link" href="https://dribbble.com/" target="_blank" rel="noreferrer">Dribbble</a>
            <a class="social-link" href="https://www.instagram.com/galangadhi_" target="_blank" rel="noreferrer">Instagram</a>
            <a class="social-link" href="https://www.linkedin.com/in/galangadhisaputra" target="_blank" rel="noreferrer">LinkedIn</a>
          </div>
        </div>
      </div>
    </footer>
    <script is:inline>
      const toggle = document.querySelector("[data-theme-toggle]");
      const root = document.documentElement;
      const updateLabel = () => {
        const isDark = root.dataset.theme === "dark";
        const icon = document.querySelector("[data-theme-icon]");
        if (icon) icon.textContent = isDark ? "☀" : "☾";
      };
      updateLabel();
      toggle?.addEventListener("click", () => {
        const next = root.dataset.theme === "dark" ? "light" : "dark";
        root.dataset.theme = next;
        try {
          localStorage.setItem("theme", next);
        } catch {}
        updateLabel();
      });
    </script>
  </body>
</html>

<style>
  .profile-block {
    padding: var(--space-2) 0 0;
    max-width: 760px;
  }

  .avatar-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12px;
  }

  .avatar {
    width: 64px;
    height: 64px;
    border-radius: 999px;
    object-fit: cover;
    background: var(--surface);
  }

  .theme-toggle {
    border: none;
    background: transparent;
    color: var(--pill-ink);
    border-radius: 999px;
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font: inherit;
    font-size: 15px;
    cursor: pointer;
    border: 1px solid var(--surface);
  }

  .theme-toggle:hover {
    background: var(--pill-bg-hover);
    color: var(--ink);
  }

  .lead {
    max-width: 62ch;
    margin: 8px 0 0;
    color: var(--muted);
  }

  h1 {
    margin: 8px 0 0;
    font-size: inherit;
    font-weight: 600;
  }

  .text-nav {
    display: flex;
    gap: 18px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .nav-link {
    font-size: 13px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: var(--ink);
  }

  .nav-link.active {
    color: var(--ink);
  }

  .site-footer {
    padding: var(--space-7) 0 var(--space-5);
  }

  .footer-inner {
    max-width: 760px;
  }

  .footer-copy {
    margin: 0;
    color: var(--muted);
    font-size: 13px;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    padding-top: var(--space-2);
  }

  .footer-links {
    display: flex;
    gap: 10px;
  }

  .social-link {
    border-radius: 999px;
    background: transparent;
    color: var(--pill-ink);
    display: inline-block;
    padding: 6px 10px;
    font-size: 12px;
    transition: background 0.15s ease, color 0.15s ease;
  }

  .social-link:hover {
    background: var(--pill-bg-hover);
    color: var(--ink);
  }

  @media (max-width: 700px) {
    .text-nav {
      gap: 8px;
    }
  }
</style>
