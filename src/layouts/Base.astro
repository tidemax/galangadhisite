---
import "../styles/global.css";
import { profile } from "../data/site";
const {
  title = profile.name,
  description = profile.summary,
  active = "home",
  showProfile = true,
  showProfilePhoto = true,
  stickyHeader = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400&family=Inter:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class:list={["site-header", stickyHeader && "is-sticky"]}>
      <div class="container header-inner">
        <a class="profile-chip" href="/" aria-label="Go to home">
          <span class="brand-name">GALANG SAPUTRA</span>
          <span class="brand-role">VISUAL DESIGNER</span>
        </a>
        <div class="header-right">
          <nav class="text-nav">
            <a class:list={["nav-link", active === "home" && "active"]} href="/">Work</a>
            <a class:list={["nav-link", (active === "about" || active === "cv") && "active"]} href="/about">About / CV</a>
            <a class:list={["nav-link", active === "archive" && "active"]} href="/archive">Archive</a>
            <a class:list={["nav-link", active === "blog" && "active"]} href="/blog">Blog</a>
          </nav>
        </div>
      </div>
    </header>
    <main>
      <div class="container">
        {showProfile && (
          <section class="profile-block">
            {showProfilePhoto && (
              <div class="profile-top">
                <img class="avatar" src="/avatar.svg" alt={`${profile.name} photo`} />
              </div>
            )}
            <h1 class="intro-title">
              I&apos;m Galang, self-taught visual designer
              <br />
              Specializing in Presentation Deck, Branding, and 3D graphics
            </h1>
            <p class="intro-more">
              <a href="/about">More info â†’</a>
            </p>
          </section>
        )}
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container footer-inner">
        <div class="footer-bottom">
          <p class="footer-copy">
            Based in Malang, Indonesia<br />
            Design + Code with love by Galang Adi Saputra
          </p>
          <div class="footer-links">
            <a class="social-link" href="mailto:galangadhi47@gmail.com">Email</a>
            <a class="social-link" href="https://x.com/" target="_blank" rel="noreferrer">X</a>
            <a class="social-link" href="https://www.behance.net/galangadhi" target="_blank" rel="noreferrer">Behance</a>
            <a class="social-link" href="https://dribbble.com/" target="_blank" rel="noreferrer">Dribbble</a>
            <a class="social-link" href="https://www.instagram.com/galangadhi_" target="_blank" rel="noreferrer">Instagram</a>
            <a class="social-link" href="https://www.linkedin.com/in/galangadhisaputra" target="_blank" rel="noreferrer">LinkedIn</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-header {
    border-bottom: 1px solid var(--line);
    background: var(--bg);
    z-index: 20;
  }

  .site-header.is-sticky {
    position: sticky;
    top: 0;
  }

  .header-inner {
    min-height: 68px;
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 18px;
  }

  .profile-chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--ink);
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    white-space: nowrap;
  }

  .brand-name {
    color: var(--ink);
  }

  .brand-role {
    color: #8a8a8a;
    margin-left: 2px;
  }

  .profile-chip:hover {
    text-decoration: none;
  }

  .header-right {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    justify-self: end;
  }

  .profile-block {
    padding: 28px 0 18px;
    position: relative;
  }

  .profile-top {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .avatar {
    width: 64px;
    height: 64px;
    border-radius: 999px;
    object-fit: cover;
    background: var(--surface);
  }

  .lead {
    max-width: 62ch;
    margin: 8px 0 0;
    color: var(--muted);
  }

  .intro-more {
    margin: 10px 0 0;
    color: var(--muted);
  }

  .intro-title {
    margin: 0;
    max-width: 28ch;
  }

  .intro-more a {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .text-nav {
    display: flex;
    gap: 18px;
    flex-wrap: wrap;
  }

  .nav-link,
  .social-link,
  .intro-more a {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    font-weight: 400;
    color: #8a8a8a;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: color 0.15s ease, text-decoration-color 0.15s ease;
    text-decoration: none;
  }

  .nav-link:hover,
  .social-link:hover,
  .intro-more a:hover {
    color: #2563eb;
    text-decoration: none;
  }

  .nav-link.active {
    color: #8a8a8a;
  }

  .site-footer {
    border-top: 1px solid var(--line);
    padding: 32px 0 24px;
  }

  .footer-inner {
    max-width: none;
  }

  .footer-copy {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
    color: #8a8a8a;
    text-align: center;
  }

  .footer-bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: var(--space-2);
    flex-wrap: wrap;
    padding-top: 0;
  }

  .footer-links {
    display: flex;
    gap: 18px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .social-link {
    background: transparent;
    display: inline-block;
    min-height: auto;
    padding: 0;
  }

  @media (max-width: 700px) {
    .header-inner {
      min-height: 60px;
      align-items: flex-start;
      grid-template-columns: 1fr;
      justify-content: center;
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .header-right {
      width: 100%;
      justify-content: flex-start;
      gap: 12px;
    }

    .text-nav {
      gap: 10px;
    }

    .profile-chip {
      font-size: 0.78rem;
      letter-spacing: 0.06em;
    }

  }
</style>
