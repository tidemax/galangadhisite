---
import "../styles/global.css";
import { profile } from "../data/site";
const siteTitle = "Galang Saputra | Visual Designer";
const {
  title = siteTitle,
  description = profile.summary,
  active = "home",
  showProfile = true,
  showProfilePhoto = true,
  stickyHeader = false,
  showFooterContact = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400&family=Inter:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class:list={["site-header", stickyHeader && "is-sticky"]}>
      <div class="container header-inner">
        <a class="profile-chip" href="/" aria-label="Go to home">
          <span class="brand-name">GALANG SAPUTRA</span>
          <span class="brand-role">VISUAL DESIGNER</span>
        </a>
        <p class="header-time" id="header-time">(ID) 00:00:00</p>
        <div class="header-right">
          <nav class="text-nav">
            <a class:list={["nav-link", (active === "about" || active === "cv") && "active"]} href="/about">Information</a>
            <a class:list={["nav-link", active === "archive" && "active"]} href="/archive">Archive</a>
            <a class:list={["nav-link", active === "contact" && "active"]} href="/contact">Contact</a>
          </nav>
        </div>
      </div>
    </header>
    <main>
      <div class="container">
        {showProfile && (
          <section class="profile-block">
            {showProfilePhoto && (
              <div class="profile-top">
                <img class="avatar" src="/avatar.svg" alt={`${profile.name} photo`} />
              </div>
            )}
            <h1 class="intro-title">
              I&apos;m Galang, self-taught visual designer
              <br />
              Specializing in Presentation Deck, Branding, and 3D graphics
            </h1>
            <p class="intro-more">
              <a href="/about">More info →</a>
            </p>
          </section>
        )}
        <slot />
      </div>
    </main>

    <footer class:list={["site-footer", showFooterContact ? "is-featured" : "is-simple"]}>
      {showFooterContact ? (
        <>
          <div class="footer-bottom-wrap">
            <div class="container footer-bottom">
              <p class="footer-copy">Based in Malang, Indonesia · Designed and coded by Galang Adi Saputra</p>
              <div class="footer-links">
                <a class="footer-link" href="https://www.instagram.com/galangadhi_" target="_blank" rel="noreferrer">Instagram</a>
                <a class="footer-link" href="https://www.linkedin.com/in/galangadhisaputra" target="_blank" rel="noreferrer">LinkedIn</a>
                <a class="footer-link" href="mailto:galangadhi47@gmail.com">Email</a>
                <a class="footer-link" href="https://x.com/" target="_blank" rel="noreferrer">X</a>
              </div>
            </div>
          </div>
        </>
      ) : (
        <div class="container footer-simple">
          <p class="footer-copy">Designed and coded by Galang Adi Saputra</p>
          <div class="footer-links">
            <a class="footer-link" href="https://www.instagram.com/galangadhi_" target="_blank" rel="noreferrer">Instagram</a>
            <a class="footer-link" href="https://www.linkedin.com/in/galangadhisaputra" target="_blank" rel="noreferrer">LinkedIn</a>
            <a class="footer-link" href="mailto:galangadhi47@gmail.com">Email</a>
            <a class="footer-link" href="https://x.com/" target="_blank" rel="noreferrer">X</a>
          </div>
        </div>
      )}
    </footer>
  </body>
</html>

<script is:inline>
  const timeEl = document.getElementById("header-time");

  function updateWibTime() {
    if (!timeEl) return;
    const now = new Date();
    const clock = new Intl.DateTimeFormat("en-GB", {
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit",
      hour12: false,
      timeZone: "Asia/Jakarta",
    }).format(now);
    timeEl.textContent = `(ID) ${clock}`;
  }

  updateWibTime();
  setInterval(updateWibTime, 1000);
</script>

<style>
  .site-header {
    border-bottom: 1px solid var(--line);
    background: var(--bg);
    z-index: 20;
  }

  .site-header.is-sticky {
    position: sticky;
    top: 0;
  }

  .header-inner {
    min-height: 68px;
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr);
    align-items: center;
    gap: 16px 22px;
    padding-top: 2px;
    padding-bottom: 2px;
  }

  .profile-chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--ink);
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    white-space: nowrap;
    min-width: 0;
  }

  .brand-name {
    color: var(--ink);
  }

  .brand-role {
    color: #8a8a8a;
    margin-left: 2px;
  }

  .profile-chip:hover {
    text-decoration: none;
  }

  .header-right {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    justify-self: end;
    min-width: 0;
  }

  .header-time {
    margin: 0;
    justify-self: center;
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #8a8a8a;
  }

  .profile-block {
    padding: 40px 0 34px;
    position: relative;
  }

  .profile-top {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .avatar {
    width: 64px;
    height: 64px;
    border-radius: 999px;
    object-fit: cover;
    background: var(--surface);
  }

  .lead {
    max-width: 62ch;
    margin: 8px 0 0;
    color: var(--muted);
  }

  .intro-more {
    margin: 18px 0 0;
    color: var(--muted);
  }

  .intro-title {
    margin: 0;
    max-width: 28ch;
  }

  .intro-more a {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .text-nav {
    display: flex;
    gap: 18px;
    flex-wrap: nowrap;
    white-space: nowrap;
    justify-content: flex-end;
    min-width: 0;
  }

  .nav-link,
  .intro-more a {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    font-weight: 400;
    color: #8a8a8a;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: color 0.15s ease, text-decoration-color 0.15s ease;
    text-decoration: none;
  }

  .nav-link:hover,
  .intro-more a:hover {
    color: #2563eb;
    text-decoration: none;
  }

  .nav-link.active {
    color: #8a8a8a;
  }

  .site-footer {
    margin-top: 28px;
    background: var(--bg);
    border-top: 1px solid var(--line);
  }

  .site-footer.is-featured {
    margin-top: 34px;
  }

  .site-footer.is-simple {
    margin-top: 24px;
  }

  .footer-link,
  .footer-note {
    margin: 0;
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #8a8a8a;
  }

  .footer-link:hover {
    color: #2563eb;
    text-decoration: none;
  }

  .footer-note {
    display: none;
  }

  .footer-bottom-wrap {
    border-top: 0;
  }

  .footer-copy {
    font-family: "IBM Plex Mono", "SFMono-Regular", Menlo, monospace;
    font-size: 0.84rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
    color: #8a8a8a;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
    padding-top: 12px;
    padding-bottom: 12px;
  }

  .footer-simple {
    padding: 12px 0 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 14px;
    flex-wrap: wrap;
  }

  .footer-links {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .footer-links.compact {
    gap: 10px;
  }

  @media (max-width: 1080px) {
    .header-inner {
      min-height: 62px;
      grid-template-columns: minmax(0, 1fr) auto;
      grid-template-areas:
        "brand nav"
        "time nav";
      align-items: center;
      gap: 8px 16px;
      padding-top: 8px;
      padding-bottom: 8px;
    }

    .profile-chip {
      grid-area: brand;
    }

    .header-time {
      grid-area: time;
      justify-self: start;
      font-size: 0.78rem;
      letter-spacing: 0.06em;
    }

    .header-right {
      grid-area: nav;
      width: auto;
      justify-self: end;
      align-self: start;
    }

    .text-nav {
      gap: 14px;
    }
  }

  @media (max-width: 700px) {
    .header-inner {
      min-height: 60px;
      align-items: flex-start;
      grid-template-columns: 1fr auto;
      grid-template-areas:
        "brand brand"
        "time time"
        "nav nav";
      padding-top: 10px;
      padding-bottom: 10px;
      gap: 8px;
    }

    .header-right {
      width: 100%;
      justify-content: flex-start;
      justify-self: start;
      align-self: start;
    }

    .header-time {
      justify-self: flex-start;
    }

    .text-nav {
      gap: 10px;
      flex-wrap: wrap;
      white-space: normal;
      justify-content: flex-start;
    }

    .profile-chip {
      font-size: 0.78rem;
      letter-spacing: 0.06em;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .footer-simple {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

  }
</style>
